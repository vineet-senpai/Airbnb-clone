<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Airbnb</title>
    <link rel="stylesheet" href="/navbar.css">
    <link rel="stylesheet" href="/home.css">
</head>
<body>
    <nav>
        <div class="nav-container">
            <div class="logo">
                <div class="logo-icon">R</div>
                <h1>RenderLoft</h1>
            </div>
            <ul class="nav-links">
                <li><a href="#home">Home</a></li>
                <li><a href="#listings">All Listings</a></li>
                <li><a href="#host">Airbnb your Home</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <h2 class="page-title">All Listings</h2>
        <% for(list of allListings){ %>
            <div class="listings-grid">
                <div class="listing-card">
                    <img src= <%= list.image %> alt=<%= list.title %> class="listing-image">
                    <div class="listing-content">
                        <h4 class="listing-title"><%= list.title %></h4>
                        <h6 class="listing-price"><span class="currency">â‚¹</span><%= list.price %></h6>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
    <script>
        // Add smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Add click interaction for listing cards
        document.querySelectorAll('.listing-card').forEach(card => {
            card.addEventListener('click', function() {
                const title = this.querySelector('.listing-title').textContent;
                alert(`You clicked on: ${title}`);
                // In a real application, this would navigate to the listing detail page
            });
        });
    </script>
</body>
</html>